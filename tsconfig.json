{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "out",
        "skipLibCheck": true,
        "target": "esnext"
    },
    "exclude": ["./node_modules"],
    "include": ["./*.ts", "./utils/*.ts"]
}
